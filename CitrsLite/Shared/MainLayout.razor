@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="@($"background:{Colors.Lime.Darken4}")">
        
        <MudGrid Justify="Justify.FlexStart" Spacing="3">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit"
                           Edge="Edge.Start"
                           OnClick="@((e) => DrawerToggle())" />
            <MudText Typo="Typo.h6" Class="my-auto">
                <MudNavLink Href="/">C.I.T.R.S Lite</MudNavLink>
            </MudText>
            <MudItem>
                <MudNavLink Class="" Href="/participant" Match="NavLinkMatch.Prefix">Participant</MudNavLink>
            </MudItem>
            <MudItem>
                <MudNavLink Href="/varietyClone/add" Match="NavLinkMatch.Prefix">Variety Clones</MudNavLink>
            </MudItem>
        </MudGrid>

    </MudAppBar>
    <MudDrawer Style="@($"background:{Colors.Lime.Lighten4}; color:{Colors.Lime.Darken4}")"
               @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.Prefix">Dashboard</MudNavLink>
            <MudNavLink Href="/participant/add" Match="NavLinkMatch.Prefix">Add Participant</MudNavLink>
            <MudNavLink Href="/participant" Match="NavLinkMatch.Prefix">Participants</MudNavLink>
            <MudNavLink Href="/varietyClone/add" Match="NavLinkMatch.Prefix">Variety Clones</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/users" Match="NavLinkMatch.Prefix">Users</MudNavLink>
                <MudNavLink Href="/security" Match="NavLinkMatch.Prefix">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
        </MudNavMenu>
    </MudDrawer>


    <MudMainContent MaxWidth="MaxWidth.ExtraLarge">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}