@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="@($"background:{Colors.Lime.Darken4}")">
        
        <MudGrid Justify="Justify.FlexStart" Spacing="3">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit"
                           Edge="Edge.Start"
                           OnClick="@((e) => DrawerToggle())" />
            <MudText Typo="Typo.h6" Class="my-auto">
                <MudNavLink Href="/">C.I.T.R.S Lite Participants</MudNavLink>
            </MudText>            
        </MudGrid>

    </MudAppBar>
    <MudDrawer  
        Variant="DrawerVariant.Mini"         
        ClipMode="DrawerClipMode.Always"
        Style="@($"background:{Colors.Lime.Lighten4}; color:{Colors.Lime.Darken4}")"        
        Elevation="1"
               @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/participant/add" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Add">          
                Create
            </MudNavLink>
            <MudNavLink Href="/participants" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Search">
                Search
                </MudNavLink>                                    
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent MaxWidth="MaxWidth.ExtraLarge">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}